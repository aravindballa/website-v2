---
const socialLinks = [
  { href: 'https://twitter.com/aravindballa', label: 'Twitter' },
  { href: 'https://github.com/aravindballa', label: 'Github' },
  { href: 'https://www.youtube.com/channel/UC2y7GYWCZtXApu6iQmlmFnw', label: 'YouTube' },
];

const linkClass = "text-[var(--muted)] hover:text-[var(--foreground)] transition-colors";
---

<footer class="mt-24 mb-8">
  <div class="container mx-auto px-4 max-w-4xl">
    <div class="bg-[var(--surface)] rounded-2xl px-8 py-10">
    <div class="flex flex-col md:flex-row items-start justify-between gap-8">
      <div class="flex flex-col items-start space-y-2">
        <a href="/" class="hover:opacity-80 transition-opacity">
          <img src="/logo.png" alt="AB Logo" class="h-10 w-10 dark:hidden" />
          <img src="/logo-dark.png" alt="AB Logo" class="h-10 w-10 hidden dark:block" />
        </a>
      </div>

      <div class="flex gap-16 text-sm">
        <div class="flex flex-col gap-2">
          <h4 class="font-semibold text-[var(--foreground)]">Social</h4>
          {socialLinks.map((link) => (
            <a href={link.href} class={linkClass} target="_blank" rel="noopener noreferrer">
              {link.label}
            </a>
          ))}
        </div>

        <div class="flex flex-col gap-2">
          <h4 class="font-semibold text-[var(--foreground)]">Active Projects</h4>
          <a href="https://stackblocks.app" class={linkClass} target="_blank" rel="noopener noreferrer">Stackblocks</a>
          <a href="https://caffeineletter.com" class={linkClass} target="_blank" rel="noopener noreferrer">Caffeineletter</a>
        </div>

        <div class="flex flex-col gap-2">
          <h4 class="font-semibold text-[var(--foreground)]">More</h4>
          <a href="/rss.xml" class={linkClass}>RSS</a>
          <a href="https://github.com/aravindballa/website" class={linkClass} target="_blank" rel="noopener noreferrer">Source</a>
          <a href="https://notes.aravindballa.com/" class={linkClass} target="_blank" rel="noopener noreferrer">Notes</a>
        </div>
      </div>
    </div>
    </div>
  </div>
</footer>
