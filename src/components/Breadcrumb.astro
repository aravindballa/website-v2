---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;
---

<nav class="text-sm text-[var(--muted)] mb-8" aria-label="Breadcrumb">
  <ol class="flex items-center flex-wrap gap-1">
    {crumbs.map((crumb, i) => (
      <li class="flex items-center gap-1">
        {i > 0 && <span>/</span>}
        <a href={crumb.href} class="hover:text-[var(--foreground)] transition-colors">{crumb.label}</a>
      </li>
    ))}
    <li><span>/</span></li>
  </ol>
</nav>
