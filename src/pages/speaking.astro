---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const talks = [
  {
    title: 'Building a Second brain',
    url: 'https://www.youtube.com/watch?v=8XP0pxofYbQ',
    date: 'Jun 2020',
    note: 'Remote',
  },
  {
    title: 'Taking power back to CSS',
    url: 'https://www.meetup.com/vue-hyderabad/events/268288016/',
    date: 'Feb 2020',
  },
  {
    title: 'Build Blazing Fast Portfolios',
    url: '/talks/devfest-19/',
    date: 'Oct 2019',
  },
  {
    title: 'Build Websites with Gatsby JS',
    url: 'https://www.meetup.com/coderplex/events/263195332/',
    date: 'Jul 2019',
  },
  {
    title: 'React vs Vue',
    url: 'https://www.meetup.com/vue-hyderabad/events/268288016/',
    date: 'Apr 2018',
  },
];
---

<Layout title="Speaking" description="Talks and presentations by Aravind Balla">
  <Breadcrumb crumbs={[
    { label: 'Aravind Balla', href: '/' },
  ]} />
  <div class="space-y-8">
    <div>
      <h1 class="text-4xl font-bold font-poppins mb-4">Speaking</h1>
      <p class="text-lg text-[var(--muted)]">
        I speak at meetups and conferences on topics that I'm excited about.
      </p>
    </div>

    <div class="space-y-4">
      {talks.map((talk) => (
        <a
          href={talk.url}
          target={talk.url.startsWith('/') ? undefined : '_blank'}
          rel={talk.url.startsWith('/') ? undefined : 'noopener noreferrer'}
          class="block border border-[var(--border)] rounded-lg p-6 hover:shadow-lg transition-shadow"
        >
          <h3 class="text-xl font-semibold font-poppins mb-1">
            {talk.title}
          </h3>
          <p class="text-[var(--muted)] text-sm">
            {talk.date}{talk.note && ` Â· ${talk.note}`}
          </p>
        </a>
      ))}
    </div>
  </div>
</Layout>
